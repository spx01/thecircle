{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "max-classes-per-file": "off",
        "import/extensions": "off",
        "lines-between-class-members": "off",
        "no-console": "off"
    },
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [
                ".js"
            ]
        },
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true,
                "project": "./"
            }
        }
    }
}
